<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mohitkishore.guidemydough" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UI.BalanceActivity"
            android:label="@string/title_activity_balance"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UI.ScottyActvity"
            android:label="@string/title_activity_scotty_actvity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UI.ProgressActivity"
            android:label="@string/title_activity_progress"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UI.DailyPlan"
            android:label="@string/title_activity_daily_plan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UI.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
